<div class="text-center center-div" id="login">
    <div class="container w-50 border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Admin login</h2>

            <h5 class="bg-success text-white mt-3 opacity-50" >{{logout}}</h5>
            <h5 class="bg-danger text-white mt-3 opacity-50" >{{invalid}}</h5>

        </div>
        <form action="/asignin" method="post" class="pt-3" id="reg-form">
            <div class="form-group">
                <input type="username" class="form-control" placeholder="username" name="username">
                {{!-- <small class="form-text text-muted text-left">Register email address</small> --}}
               
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="password">
            </div>
            <button type="submit" class="btn btn-warning">Submit</button>
        </form>
    </div>
</div>

