<div class="text-center center-div" id="login">
    <div class="container w-50 border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">User Login</h2>

            <h5 class="bg-success text-white mt-3 opacity-50" >{{logout}}</h5>
            <h5 class="bg-danger text-white mt-3 opacity-50" >{{invalid}}</h5>

        </div>
        <form action="/signin" method="post" class="pt-3" id="reg-form">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="email" name="email" id="contact-email" onkeyup="validateEmail()">
                 <span id="email-error" class="text-danger mt-3"></span>
                <small class="form-text text-muted text-left">Register email address</small>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="password"  id="password-email" onkeyup="validatePassword()">
                <span id="pass-error" class="text-danger mt-3"></span>
            </div>
            <span id="submit-error" class="text-danger mb-3"></span>
            <button type="submit" class="btn btn-warning"  onclick="return validateForm2()"> Submit</button><br>

            <a href="/" class="btn bg-light mt-2" >Home</a> <a href="/signup" class="btn bg-light mt-2">Create new account</a>
        </form>
    </div>
</div>

